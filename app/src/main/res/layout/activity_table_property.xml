<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_tablename_tablePropertyA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <EditText
            android:id="@+id/edit_tablename_tablePropertyA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/tablename" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_confirm_tablePropertyA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/submit" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_tablePropertyA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_confirm_tablePropertyA"
        android:layout_below="@id/layout_tablename_tablePropertyA" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/float_tablePropertyA"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@id/btn_confirm_tablePropertyA"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:src="@drawable/ic_add_white_36dp" />
</RelativeLayout>